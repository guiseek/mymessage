{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@envs/*": ["envs/src/*"],
      "@mymessage/client/domain": ["libs/client/domain/src/index.ts"],
      "@mymessage/client/feature-account": [
        "libs/client/feature-account/src/index.ts"
      ],
      "@mymessage/client/ui-message": ["libs/client/ui-message/src/index.ts"],
      "@mymessage/client/util-message": [
        "libs/client/util-message/src/index.ts"
      ],
      "@mymessage/client/feature-message": [
        "libs/client/feature-message/src/index.ts"
      ],
      "@mymessage/client/shell": ["libs/client/shell/src/index.ts"],
      "@mymessage/client/feature-meeting": [
        "libs/client/feature-meeting/src/index.ts"
      ],
      "@mymessage/client/util-peer": ["libs/client/util-peer/src/index.ts"],
      "@mymessage/core/entities": ["libs/core/entities/src/index.ts"],
      "@mymessage/core/config": ["libs/core/config/src/index.ts"],
      "@mymessage/common/ui-material": ["libs/common/ui-material/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
