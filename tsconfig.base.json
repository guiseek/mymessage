{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mymessage/client/domain": ["libs/client/domain/src/index.ts"],
      "@mymessage/client/feature-account": [
        "libs/client/feature-account/src/index.ts"
      ],
      "@mymessage/client/ui-message": ["libs/client/ui-message/src/index.ts"],
      "@mymessage/client/util-message": [
        "libs/client/util-message/src/index.ts"
      ],
      "@mymessage/client/util-peers": ["libs/client/util-peers/src/index.ts"],
      "@mymessage/client/feature-message": [
        "libs/client/feature-message/src/index.ts"
      ],
      "@mymessage/client/shell": ["libs/client/shell/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
